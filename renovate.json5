{
	"$schema": "https://docs.renovatebot.com/renovate-schema.json",
	"extends": ["config:base"],
	"automergeType": "branch",
	"dependencyDashboard": true,
	"packageRules": [
		{
			"updateTypes": ["minor", "patch", "pin", "digest"],
			"automerge": true,
		},
		{
			"matchPackageNames": ["@types/node"],
			"allowedVersions": "14.x",
		},
	],
}
